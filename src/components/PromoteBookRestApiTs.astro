---
import { getLangFromUrl, useTranslationsObject } from "../i18n/utils";
import PromoteBook from "./PromoteBook.astro";

const lang = getLangFromUrl(Astro.url);

const t = useTranslationsObject(lang, {
  en: {
    title: "Interested about building and API using Node.js/TypeScript?",
    description:
      'Take a look on my brand new Book: <strong>REST-API.ts</strong>. You can <a href="https://github.com/madeindjs/rest-api.ts">grab a free PDF version on Github</a>. If you like my work, you can <a href="https://leanpub.com/rest-api-ts/">buy a paid version on Leanpub</a>.',
  },
  fr: {
    title: "Intéressé pour créer un API avec Node.js/TypeScript?",
    description:
      'Jette un coup d\'œil à mon livre: <strong>REST-API.ts</strong>. Tu peux <a href="https://github.com/madeindjs/rest-api.ts">télécharger une version gratuite au format PDF sur Github</a>. Si tu aimes mon travail <a href="https://leanpub.com/rest-api-ts/">tu peux acheter un version payante sur Leanpub</a>.',
  },
});
---

<PromoteBook title={t.title} description={t.description} />
